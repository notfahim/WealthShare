@model WealthShareV_2.Models.Issue_Tbl
@{
    ViewBag.Title = "CreateIssue";
}

<style>

    .signup {
        background-image: url('../../images/Login_Signup/loginSignupBG.jpg');
        background-size: cover;
        margin-top: 90px;
    }

        .signup img {
            margin-top: 20px;
        }
</style>

@*<%--Bootstrap CSS--%>*@
<link href="Bootstrap/CSS/bootstrap.min.css" rel="stylesheet" />
@*<%--Datatables CSS--%>*@
<link href="datatables/CSS/jquery.dataTables.min.css" rel="stylesheet" />
@*<%--Fontawesome CSS--%>*@
<link href="Fontawesome/css/all.css" rel="stylesheet" />
@*<%--Custom CSS--%>*@
<link href="CSS/CustomStyleSheet.css" rel="stylesheet" />

@*<%--jquery--%>*@
<script src="Bootstrap/JS/jquery-3.5.1.slim.min.js"></script>
@*<%--popper js--%>*@
<script src="Bootstrap/JS/popper.min.js"></script>
@*<%--bootstrap js--%>*@
<script src="Bootstrap/JS/bootstrap.min.js"></script>


<div class="container-fluid  signup">
    @using (@Html.BeginForm("CreateIssue",
                        "User",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
    {
        <div class="row">

            <div class="col-md-8 mx-auto">

                <div class="row">
                    <div class="col">
                        <center>


                            <img src="~/images/Login_Signup/sign-up.png" width="150px" />
                        </center>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <center>
                            <h3>Create Issue</h3>
                        </center>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <hr>
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-6">

                        <label><b>Title</b> </label>
                        <div class="form-group">
                            @*<asp:TextBox CssClass="form-control" ID="TextBox1" runat="server" placeholder="UserName"></asp:TextBox>*@
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Issue Tilte" })
                            <span style="color:crimson;">   @Html.ValidationMessageFor(x => x.Title)</span>
                        </div>
                    </div>

                    <div class="col-md-6">

                        @*<label><b>Category</b></label>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Category, new { @class = "form-control", @placeholder = "Category" })
            <span style="color:crimson">   @Html.ValidationMessageFor(x => x.Category)</span>*@
                        <label><b>Category</b> </label>
                        <div class="form-group">
                            <div class="input-group">


                                @Html.DropDownListFor(x => x.Cat_Id, ViewBag.categorylist as SelectList, "--select--", new { @class = "form-control" })
                            </div>
                            <span style="color:crimson;">   @Html.ValidationMessageFor(x => x.Cat_Id) </span>

                        </div>

                    </div>

                   


                </div>

                <div class="row">
                    <div class="col">

                        <label><b>Description</b></label>
                        <div class="form-group">
                            @*<asp:TextBox CssClass="form-control" ID="TextBox5" runat="server" placeholder="Email" TextMode="Email"></asp:TextBox>*@
                            @Html.TextAreaFor(x => x.Issue_Description, new { @class = "form-control", @placeholder = "Issue Description" })
                            <span style="color:crimson">   @Html.ValidationMessageFor(x => x.Issue_Description)</span>

                        </div>

                    </div>
                </div>

                <div class="row">



                    <div class="col">

                        <label><b>Goal/Target Amount</b></label>
                        <div class="form-group">
                            @*<asp:TextBox CssClass="form-control" ID="TextBox2" runat="server" placeholder="Date of Birth" TextMode="Date"></asp:TextBox>*@
                            @Html.TextBoxFor(x => x.Goal, new { @class = "form-control", @placeholder = "Target Amount" })
                            <span style="color:crimson">   @Html.ValidationMessageFor(x => x.Goal)</span>


                        </div>
                    </div>
                   


                </div>

                <div class="row">

                    

                    <div class="col-md-6">

                        <label><b>Add Image</b></label>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>

                                <input type="file" name="imgfile" id="imgfile" class="form-control" />



                            </div>


                        </div>

                    </div>





                </div>

                <div class="row">
                    <div class="col-md-6 mx-auto">



                        <div class="form-group">
                            <center>
                                <p style="color:crimson;">@ViewBag.error</p>
                            </center>
                        </div>


                        <div class="form-group">
                            <center>
                                @*<asp:Button class="btn btn-success btn-lg" ID="Button1" runat="server" Text="Login" />*@
                                <input type="submit" value="Submit" class="btn btn-primary btn-lg" />
                            </center>
                        </div>


                    </div>
                </div>




            </div>

        </div>
    }
</div>


<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}



