@model WealthShareV_2.Models.Admin_Tbl
@{
    ViewBag.Title = "Login";

}


<style>

    .login {
        
        background-image: url('../../images/Login_Signup/loginSignupBG.jpg');
        background-size: cover;
        margin-top: 90px;
    }

        .login img {
            margin-top: 20px;
        }

  

</style>

    @*<%--Bootstrap CSS--%>*@
    <link href="Bootstrap/CSS/bootstrap.min.css" rel="stylesheet" />
    @*<%--Datatables CSS--%>*@
    <link href="datatables/CSS/jquery.dataTables.min.css" rel="stylesheet" />
    @*<%--Fontawesome CSS--%>*@
    <link href="Fontawesome/css/all.css" rel="stylesheet" />
    @*<%--Custom CSS--%>*@
    <link href="CSS/CustomStyleSheet.css" rel="stylesheet" />

    @*<%--jquery--%>*@
    <script src="Bootstrap/JS/jquery-3.5.1.slim.min.js"></script>
    @*<%--popper js--%>*@
    <script src="Bootstrap/JS/popper.min.js"></script>
    @*<%--bootstrap js--%>*@
    <script src="Bootstrap/JS/bootstrap.min.js"></script>
    

    <div class="container-fluid login">
       @using (@Html.BeginForm()) {
        <div class="row">

            <div class="col-md-8 mx-auto">

                <div class="row">
                    <div class="col">
                        <center>
                           
                            <img src="~/images/Login_Signup/adminuser.png"  width="150px" />
                        </center>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <center>
                            <h3>Admin Login</h3>
                        </center>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <hr>
                    </div>
                </div>
                <div class="row ">
                    <div class="col-md-6 mx-auto">

                        <label><b>Email</b></label>
                        <div class="form-group">
                            @*<asp:TextBox CssClass="form-control" ID="TextBox1" runat="server" placeholder="Email" TextMode="Email"></asp:TextBox>*@
                            @Html.TextBoxFor(x => x.AdminEmail, new { @class = "form-control", @placeholder = "example@email.com" })
                            <span style="color:crimson">   @Html.ValidationMessageFor(x => x.AdminEmail)</span>
                        </div>



                        <label><b>Password</b></label>
                        <div class="form-group">
                            @*<asp:TextBox CssClass="form-control" ID="TextBox2" runat="server" placeholder="Password" TextMode="Password"></asp:TextBox>*@
                            @Html.PasswordFor(x => x.AdminPassword, new { @class = "form-control", @placeholder = "Password" })
                            <span style="color:crimson">     @Html.ValidationMessageFor(x => x.AdminPassword)</span>
                        </div>

                       <div class="form-group">
                            <center>
                               <p style="color:crimson;"><b>@ViewBag.error</b></p>
                            </center>
                        </div>


                        <div class="form-group">
                            <center>
                                @*<asp:Button class="btn btn-success btn-lg" ID="Button1" runat="server" Text="Login" />*@
                                <input type="submit" value="Login" class="btn btn-success btn-lg" />
                            </center>
                        </div>





                    </div>
                </div>


            </div>

        </div>
       }
    </div>


    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    }